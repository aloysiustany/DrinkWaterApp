<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Define the background properties like color etc -->
  <item android:id="@android:id/background">
    <shape>
      <corners
            android:radius="4dp" />
      <gradient
              android:startColor="#E8F3E8"
              android:centerColor="#E8F3E8"
              android:centerY="1.0"
              android:endColor="#E8F3E8"
              android:angle="270"
        />
      <stroke
        android:width="1dp"
        android:color="#8FC98F" >
      </stroke>
    </shape>
  </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners
            android:radius="4dp" />
        <gradient
            android:startColor="#2196F3"
            android:centerColor="#1565C0"
            android:centerY="1.0"
            android:endColor="#1565C0"
            android:angle="270"
            />
      </shape>
    </clip>
  </item>
</layer-list>
